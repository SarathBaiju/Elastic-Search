@model IEnumerable<EsDemo.Models.Editor>
@{
    ViewBag.Title = "Index";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore-min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/Scripts/Search.js"></script>
<div class="wrapper">
    <div class="header">
        <h2>Search </i></h2>
    </div>
    <div class="body">
        <input type="search" id="searchInput" class="form-control" placeholder="enter name to be search" />
        <span id="searchclear" class="glyphicon glyphicon-remove-circle"></span>
        <input type="button" id="searchBtn" class="btn btn-danger" value="Search" />
        <div id="tblresult">
            <table class="table table-bordered" id="tblSearch">
                <br />
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Role</td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.role   <i class="fa fa-trash" data-id="@item.id"></i>  <span class="glyphicon glyphicon-edit" data-id="@item.id"  ></span></td>
                    </tr>
                }
            </table>
            <div class="popup-edit">
                <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">

                            </div>
                            <div class="modal-body">
                                <span class="name"><label>Name :</label> </span>
                                <span class="role"> <label>Role :</label> </span>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" id="editCancel">Cancel</button>
                                <button id="editConfirm" class="btn btn-danger btn-ok">Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
           
        @section bodyTemplates{
            <div id="divTemplates">
                @Html.Partial("~/Views/Elastic/Templates/Templates.cshtml");
            </div>
        }
    </div>
</div>
